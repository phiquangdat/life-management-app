<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NoteTakingApp.ViewModels"
             xmlns:models="clr-namespace:NoteTakingApp.Models"
             x:DataType="vm:ToDoListViewModel"
             x:Class="NoteTakingApp.Views.ToDoListPage"
             Title="To-Do List"
             BackgroundColor="#F8FAFC">

    <Grid>

        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="20">

                <Label Text="My Tasks"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="#1E293B"/>

                <CollectionView ItemsSource="{Binding Tasks}"
                                SelectionMode="None">

                    <CollectionView.EmptyView>
                        <VerticalStackLayout HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             Spacing="10"
                                             Margin="0,50,0,0">
                            <Label Text="ðŸ“" FontSize="48"/>
                            <Label Text="No active tasks"
                                   FontSize="20"
                                   TextColor="#64748B"/>
                            <Label Text="Tap + to add a new task"
                                   FontSize="14"
                                   TextColor="#94A3B8"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Note">

                            <Border StrokeThickness="0"
                                    BackgroundColor="White"
                                    Padding="16"
                                    Margin="0,0,0,12">

                                <Border.Shadow>
                                    <Shadow Brush="Black"
                                            Opacity="0.05"
                                            Radius="8"
                                            Offset="0,2"/>
                                </Border.Shadow>

                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>

                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding BindingContext.GoToTaskDetailsCommand,
                                                  Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                        CommandParameter="{Binding .}"/>
                                </Border.GestureRecognizers>

                                <Grid ColumnDefinitions="Auto, *, Auto"
                                      ColumnSpacing="12">

                                    <Border Grid.Column="0"
                                            HeightRequest="26"
                                            WidthRequest="26"
                                            StrokeThickness="2"
                                            VerticalOptions="Center"
                                            BackgroundColor="Transparent">

                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8"/>
                                        </Border.StrokeShape>

                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding BindingContext.ToggleTaskCompletionCommand,
                                                          Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>

                                        <Border.Triggers>
                                            <DataTrigger TargetType="Border"
                                                         Binding="{Binding IsCompleted}"
                                                         Value="True">
                                                <Setter Property="Stroke" Value="#3B82F6"/>
                                                <Setter Property="BackgroundColor" Value="#3B82F6"/>
                                            </DataTrigger>

                                            <DataTrigger TargetType="Border"
                                                         Binding="{Binding IsCompleted}"
                                                         Value="False">
                                                <Setter Property="Stroke" Value="#CBD5E1"/>
                                            </DataTrigger>
                                        </Border.Triggers>

                                        <Label Text="âœ“"
                                               TextColor="White"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               IsVisible="{Binding IsCompleted}"/>
                                    </Border>

                                    <VerticalStackLayout Grid.Column="1"
                                                         VerticalOptions="Center"
                                                         Spacing="2">

                                        <Label Text="{Binding Filename}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#1E293B">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label"
                                                             Binding="{Binding IsCompleted}"
                                                             Value="True">
                                                    <Setter Property="TextDecorations"
                                                            Value="Strikethrough"/>
                                                    <Setter Property="TextColor"
                                                            Value="#94A3B8"/>
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>

                                        <Label Text="{Binding Date, StringFormat='Due: {0:MMM dd}'}"
                                               FontSize="12"
                                               TextColor="#EF4444">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label"
                                                             Binding="{Binding IsCompleted}"
                                                             Value="True">
                                                    <Setter Property="TextColor"
                                                            Value="#CBD5E1"/>
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                    </VerticalStackLayout>

                                    <Label Grid.Column="2"
                                           Text="Active"
                                           FontSize="11"
                                           TextColor="#3B82F6"
                                           BackgroundColor="#EFF6FF"
                                           Padding="8,4"
                                           VerticalOptions="Center">

                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label"
                                                         Binding="{Binding IsCompleted}"
                                                         Value="True">
                                                <Setter Property="Text" Value="Done"/>
                                                <Setter Property="TextColor" Value="#10B981"/>
                                                <Setter Property="BackgroundColor" Value="#ECFDF5"/>
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <Button Text="+"
                Command="{Binding AddTaskCommand}"
                FontSize="32"
                TextColor="White"
                BackgroundColor="#6366F1"
                CornerRadius="28"
                HeightRequest="56"
                WidthRequest="56"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20">
            <Button.Shadow>
                <Shadow Brush="#6366F1"
                        Opacity="0.4"
                        Radius="10"
                        Offset="0,4"/>
            </Button.Shadow>
        </Button>
    </Grid>
</ContentPage>
