<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:NoteTakingApp.ViewModels"
             xmlns:models="clr-namespace:NoteTakingApp.Models"
             x:DataType="viewModels:AllNotesViewModel"
             x:Class="NoteTakingApp.Views.AllNotesPage"
             Title="My Notes"
             BackgroundColor="#F5F7FA">

    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
        
        <Border Grid.Row="0" 
                StrokeThickness="0" 
                BackgroundColor="White" 
                Padding="20" 
                Margin="15,15,15,10">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.08" Radius="15" Offset="0,2" />
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>
            
            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
                <Label Grid.Row="0" 
                       Text="ðŸ’¡ Joke of the Day" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       TextColor="#2C3E50" />
                
                <Label Grid.Row="1" 
                       Text="{Binding JokeOfTheDay}" 
                       FontSize="14" 
                       LineHeight="1.4"
                       TextColor="#5A6C7D" />
                
                <Button Grid.Row="2" 
                        Text="Get New Joke" 
                        Command="{Binding GetJokeCommand}" 
                        HorizontalOptions="Start"
                        BackgroundColor="#3498DB"
                        TextColor="White"
                        CornerRadius="8"
                        Padding="16,8"
                        FontSize="13"
                        FontAttributes="Bold" />
            </Grid>
        </Border>

        <!-- Notes Collection -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Notes}"
                        SelectionMode="None"
                        Margin="15,0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Note">
                    <Border Stroke="Transparent"
                            StrokeThickness="0"
                            BackgroundColor="White"
                            Padding="20"
                            Margin="0,5,0,10">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.08" Radius="15" Offset="0,2" />
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16" />
                        </Border.StrokeShape>
                        
                        <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                            <!-- Title -->
                            <Label Grid.Row="0" 
                                   Text="{Binding Filename}" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   TextColor="#2C3E50" />
                            
                            <!-- Preview Text -->
                            <Label Grid.Row="1" 
                                   Text="{Binding Text}" 
                                   MaxLines="3" 
                                   LineBreakMode="TailTruncation" 
                                   LineHeight="1.3"
                                   FontSize="14"
                                   TextColor="#7F8C8D"
                                   Margin="0,4,0,0" />
                            
                            <!-- Action Buttons -->
                            <Grid Grid.Row="2" 
                                  ColumnDefinitions="*,*" 
                                  ColumnSpacing="10" 
                                  Margin="0,12,0,0">
                                
                                <Button Grid.Column="0"
                                        Text="âœï¸ Edit"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoToNoteCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#3498DB"
                                        TextColor="White"
                                        CornerRadius="10"
                                        FontSize="14"
                                        FontAttributes="Bold"
                                        HeightRequest="44" />
                                
                                <Button Grid.Column="1"
                                        Text="ðŸ—‘ï¸ Delete"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteNoteCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#E74C3C"
                                        TextColor="White"
                                        CornerRadius="10"
                                        FontSize="14"
                                        FontAttributes="Bold"
                                        HeightRequest="44" />
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Add New Note Button -->
        <Border Grid.Row="2" 
                BackgroundColor="White" 
                Padding="20" 
                StrokeThickness="0"
                Margin="0">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="15" Offset="0,-2" />
            </Border.Shadow>
            
            <Button Text="âž• Add New Note" 
                    Command="{Binding GoToAddNoteCommand}"
                    BackgroundColor="#27AE60"
                    TextColor="White"
                    CornerRadius="12"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="50" />
        </Border>
    </Grid>
</ContentPage>
