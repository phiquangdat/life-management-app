<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="NoteTakingApp.Views.AllNotesPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="My Notes">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Add Note Button -->
        <Button Grid.Row="0"
                Text="Add Note"
                FontSize="18"
                Margin="20,20,20,10"
                BackgroundColor="#007ACC"
                TextColor="White"
                Clicked="OnAddNoteClicked" />

        <!-- Notes List -->
        <CollectionView Grid.Row="1"
                        x:Name="NotesCollection"
                        ItemsSource="{Binding Notes}"
                        SelectionMode="Single"
                        SelectionChanged="OnNoteSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="20,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <!-- Note Title (using filename) -->
                        <Label Grid.Row="0"
                               Text="{Binding Filename}"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black" />
                        
                        <!-- Note Date -->
                        <Label Grid.Row="1"
                               Text="{Binding Date, StringFormat='{0:MMM dd, yyyy HH:mm}'}"
                               FontSize="12"
                               TextColor="Gray"
                               Margin="0,5,0,0" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Empty State -->
        <StackLayout Grid.Row="1"
                     IsVisible="{Binding IsEmpty}"
                     VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Label Text="No notes yet"
                   FontSize="18"
                   TextColor="Gray"
                   HorizontalOptions="Center" />
            <Label Text="Tap 'Add Note' to create your first note"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />
        </StackLayout>
    </Grid>
</ContentPage>
