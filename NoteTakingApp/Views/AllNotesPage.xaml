<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:NoteTakingApp.ViewModels"
             xmlns:models="clr-namespace:NoteTakingApp.Models"
             x:DataType="viewModels:AllNotesViewModel"
             x:Class="NoteTakingApp.Views.AllNotesPage"
             Title="My Notes"
             BackgroundColor="#F5F7FA">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#6366F1</Color>
            <Color x:Key="SecondaryColor">#8B5CF6</Color>
            <Color x:Key="AccentColor">#EC4899</Color>
            <Color x:Key="SuccessColor">#10B981</Color>
            <Color x:Key="DangerColor">#EF4444</Color>
            <Color x:Key="BackgroundColor">#F8FAFC</Color>
            <Color x:Key="CardBackground">#FFFFFF</Color>
            <Color x:Key="TextPrimary">#1E293B</Color>
            <Color x:Key="TextSecondary">#64748B</Color>
            <Color x:Key="BorderColor">#E2E8F0</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.BackgroundColor>
        <Color>#F8FAFC</Color>
    </ContentPage.BackgroundColor>

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" RowSpacing="0">
        
        <Border Grid.Row="0" 
                StrokeThickness="0"
                Padding="24,20,24,24">
            
            <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                <Label Grid.Row="0"
                       Text="My Notes"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,8,0,0" />
                
                <Label Grid.Row="1"
                       Text="Capture your thoughts and ideas"
                       FontSize="15"
                       TextColor="#000000"
                       Opacity="0.9" />
            </Grid>
        </Border>

        <Border Grid.Row="1"
                StrokeThickness="0"
                BackgroundColor="White"
                Padding="20,16"
                Margin="20,-20,20,0">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="20" Offset="0,4" />
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>
            
            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                <Label Grid.Column="0"
                       Text="ðŸ”"
                       FontSize="20"
                       VerticalOptions="Center" />
                
                <Entry Grid.Column="1"
                       Placeholder="Search notes..."
                       PlaceholderColor="#64748B"
                       TextColor="#1E293B"
                       FontSize="15"
                       VerticalOptions="Center"
                       BackgroundColor="Transparent"
                       Text="{Binding SearchQuery}" />
            </Grid>
        </Border>

        <RefreshView Grid.Row="3"
                     Margin="20,0,20,0"
                     RefreshColor="#6366F1">
            <CollectionView ItemsSource="{Binding Notes}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Padding="40">
                        <Label Text="ðŸ“"
                               FontSize="60"
                               HorizontalOptions="Center"
                               Margin="0,0,0,16" />
                        <Label Text="No notes yet"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#1E293B"
                               HorizontalTextAlignment="Center"
                               Margin="0,0,0,8" />
                        <Label Text="Tap the button below to create your first note"
                               FontSize="14"
                               TextColor="#64748B"
                               HorizontalTextAlignment="Center"
                               LineHeight="1.4" />
                    </StackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Note">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="#EF4444"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteNoteCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            
                            <Border Stroke="Transparent"
                                    StrokeThickness="0"
                                    BackgroundColor="White"
                                    Padding="20,18"
                                    Margin="0,0,0,12">
                                <Border.Shadow>
                                    <Shadow Brush="Black" Opacity="0.06" Radius="16" Offset="0,2" />
                                </Border.Shadow>
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="16" />
                                </Border.StrokeShape>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoToNoteCommand}"
                                        CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>
                                
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10">
                                    <Border Grid.Row="0"
                                            HorizontalOptions="Start"
                                            BackgroundColor="#F0F9FF"
                                            Padding="10,4"
                                            StrokeThickness="0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="6" />
                                        </Border.StrokeShape>
                                        <Label Text="ðŸ“Œ Note"
                                               FontSize="11"
                                               FontAttributes="Bold"
                                               TextColor="#0284C7" />
                                    </Border>
                                    
                                    <Label Grid.Row="1" 
                                           Text="{Binding Filename}" 
                                           FontSize="19" 
                                           FontAttributes="Bold" 
                                           TextColor="#1E293B"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="1" />
                                    
                                    <Label Grid.Row="2" 
                                           Text="{Binding Text}" 
                                           MaxLines="2" 
                                           LineBreakMode="TailTruncation" 
                                           LineHeight="1.4"
                                           FontSize="14"
                                           TextColor="#64748B" />
                                    
                                    <Grid Grid.Row="3" 
                                          ColumnDefinitions="*,Auto,Auto" 
                                          ColumnSpacing="8" 
                                          Margin="0,6,0,0">
                                        
                                        <Label Grid.Column="0"
                                               Text="{Binding Date, StringFormat='ðŸ•’ {0:MMM dd, yyyy HH:mm}'}"
                                               FontSize="12"
                                               TextColor="#64748B"
                                               VerticalOptions="Center" />
                                        
                                        <Border Grid.Column="1"
                                                WidthRequest="44"
                                                HeightRequest="44"
                                                BackgroundColor="#F1F5F9"
                                                StrokeThickness="0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12" />
                                            </Border.StrokeShape>
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer 
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoToNoteCommand}"
                                                    CommandParameter="{Binding .}" />
                                            </Border.GestureRecognizers>
                                            <Label Text="âœï¸"
                                                   FontSize="18"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Border>
                                        
                                        <Border Grid.Column="2"
                                                WidthRequest="44"
                                                HeightRequest="44"
                                                BackgroundColor="#FEE2E2"
                                                StrokeThickness="0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12" />
                                            </Border.StrokeShape>
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer 
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteNoteCommand}"
                                                    CommandParameter="{Binding .}" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ðŸ—‘ï¸"
                                                   FontSize="18"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Border Grid.Row="4" 
                BackgroundColor="Transparent"
                Padding="20,16,20,20" 
                StrokeThickness="0">
            
            <Border StrokeThickness="0"
                    Padding="0"
                    HeightRequest="56">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10B981" Offset="0.0" />
                        <GradientStop Color="#059669" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Shadow>
                    <Shadow Brush="#10B981" Opacity="0.4" Radius="20" Offset="0,6" />
                </Border.Shadow>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToAddNoteCommand}" />
                </Border.GestureRecognizers>
                
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                    <Border Grid.Column="0"
                            WidthRequest="36"
                            HeightRequest="36"
                            BackgroundColor="#FFFFFF40"
                            StrokeThickness="0"
                            Margin="10,0,0,0"
                            VerticalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>
                        <Label Text="âž•"
                               FontSize="18"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Border>
                    
                    <Label Grid.Column="1"
                           Text="Create New Note"
                           FontSize="17"
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center" />
                </Grid>
            </Border>
        </Border>
    </Grid>
</ContentPage>