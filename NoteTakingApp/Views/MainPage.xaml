<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NoteTakingApp.ViewModels"
             xmlns:models="clr-namespace:NoteTakingApp.Models"
             x:DataType="vm:AllNotesViewModel"
             x:Class="NoteTakingApp.Views.MainPage">
    <ScrollView>
        <VerticalStackLayout Spacing="24" Padding="20">
            <Grid ColumnDefinitions="*, Auto">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Life Management App" 
                           FontSize="32" 
                           FontAttributes="Bold" />
                </VerticalStackLayout>
                
                <Border Grid.Column="1" 
                        StrokeThickness="0" 
                        BackgroundColor="White"
                        Padding="12" 
                        VerticalOptions="Center" >
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,4" />
                    </Border.Shadow>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>

                    <Grid ColumnDefinitions="Auto, *" ColumnSpacing="12">
                        <Border Grid.Column="0"
                                HeightRequest="46"
                                WidthRequest="46"
                                BackgroundColor="#E0F2FE"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Label Text="{Binding CurrentDate, StringFormat='{0:dd}'}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#0284C7"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>

                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="0">
                            <Label Text="Today" 
                                   FontSize="12" 
                                   TextColor="#64748B"/>
                            <Label Text="{Binding CurrentDate, StringFormat='{0:MMM yyyy}'}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#334155"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </Grid>

            <VerticalStackLayout Spacing="16">
                <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,8">
                    <Label Text="Incoming Tasks" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="#a4c7ffff"
                           VerticalOptions="Center"/>
                    
                    <Label Grid.Column="1" 
                           Text="See All" 
                           FontSize="14" 
                           TextColor="#3b82f6" 
                           FontAttributes="Bold"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoToToDoListCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>
                
                <CollectionView ItemsSource="{Binding IncomingTasks}" 
                                HeightRequest="160">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="16" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.EmptyView>
                         <Border BackgroundColor="#F1F5F9" 
                                StrokeThickness="0" 
                                Padding="20" 
                                HeightRequest="140"
                                WidthRequest="300">
                             <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20" />
                            </Border.StrokeShape>
                             <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="8">
                                 <Label Text="ðŸŽ‰" FontSize="32" HorizontalOptions="Center"/>
                                 <Label Text="All caught up!" 
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        TextColor="#334155"
                                        HorizontalOptions="Center"/>
                                 <Label Text="No tasks due in the next 7 days." 
                                        FontSize="12"
                                        TextColor="#64748B"
                                        HorizontalOptions="Center"/>
                             </VerticalStackLayout>
                         </Border>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Note">
                            <Border StrokeThickness="0"
                                    WidthRequest="220"
                                    BackgroundColor="White"
                                    Padding="16">
                                <Border.Shadow>
                                    <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="4,4" />
                                </Border.Shadow>
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="24" />
                                </Border.StrokeShape>
                                <Grid RowDefinitions="Auto, *, Auto" RowSpacing="8">
                                    <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                                        <Border Grid.Column="0"
                                                HorizontalOptions="Start"
                                                BackgroundColor="#EFF6FF"
                                                Padding="8,4"
                                                StrokeThickness="0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="8" />
                                            </Border.StrokeShape>
                                            <Label Text="Task" 
                                                   FontSize="11" 
                                                   TextColor="#3B82F6" 
                                                   FontAttributes="Bold"/>
                                        </Border>
                                        
                                        <Label Grid.Column="1" 
                                               Text="Due" 
                                               FontSize="11" 
                                               TextColor="#94A3B8"
                                               VerticalOptions="Center"/>
                                    </Grid>

                                    <Label Grid.Row="1" 
                                           Text="{Binding Filename}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="#1E293B"
                                           MaxLines="2"
                                           LineBreakMode="TailTruncation"
                                           VerticalOptions="Start"/>

                                    <Grid Grid.Row="2" ColumnDefinitions="Auto, *">
                                         <StackLayout Orientation="Horizontal" Spacing="4" VerticalOptions="Center">
                                             <Label Text="ðŸ“…" FontSize="12" VerticalOptions="Center"/>
                                             <Label Text="{Binding Date, StringFormat='{0:MMM dd}'}" 
                                                    FontSize="13" 
                                                    TextColor="#64748B"
                                                    FontAttributes="Bold"
                                                    VerticalOptions="Center"/>
                                         </StackLayout>
                                         
                                        <Button Grid.Column="1"
                                                Text="Open"
                                                Padding="0"
                                                HeightRequest="32"
                                                WidthRequest="60"
                                                FontSize="12"
                                                CornerRadius="16"
                                                BackgroundColor="#F8FAFC"
                                                TextColor="#475569"
                                                HorizontalOptions="End"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AllNotesViewModel}}, Path=GoToTaskDetailsCommand}"
                                                CommandParameter="{Binding .}"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <Border StrokeThickness="0" 
                    BackgroundColor="White"
                    Padding="20" >
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.08" Radius="18" Offset="0,3" />
                </Border.Shadow>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12">
                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="#FEF3C7"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <Label Text="ðŸ’¡"
                                   FontSize="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        
                        <Label Grid.Column="1"
                               Text="Joke of the Day" 
                               FontSize="17" 
                               FontAttributes="Bold" 
                               TextColor="#1E293B"
                               VerticalOptions="Center" />
                    </Grid>
                    
                    <BoxView Grid.Row="1"
                             HeightRequest="1"
                             BackgroundColor="#E2E8F0"
                             Margin="0,4,0,4" />
                    
                    <Label Grid.Row="2" 
                           Text="{Binding JokeOfTheDay}" 
                           FontSize="14" 
                           LineHeight="1.4"
                           TextColor="#5A6C7D" />
                    <Button Grid.Row="3" 
                            Text="Get New Joke" 
                            Command="{Binding GetJokeCommand}" 
                            HorizontalOptions="End"
                            BackgroundColor="#3498DB"
                            Margin="0,16,0,0"
                            TextColor="White"
                            CornerRadius="8"
                            Padding="16,8"
                            FontSize="13"
                            FontAttributes="Bold" />
                </Grid>
            </Border>
            <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                <Button Grid.Column="0"
                        Text="Notes Page" 
                        Command="{Binding GoToAllNotesCommand}"
                        BackgroundColor="#6366F1"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="50"
                        Margin="0,10,0,0"/>

                <Button Grid.Column="1"
                        Text="To-Do List" 
                        Command="{Binding GoToToDoListCommand}"
                        BackgroundColor="#EF4444"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="50"
                        Margin="0,10,0,0"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>