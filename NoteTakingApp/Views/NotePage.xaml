<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:NoteTakingApp.ViewModels"
             x:DataType="viewmodels:NoteViewModel"
             x:Class="NoteTakingApp.Views.NotePage"
             Title="{Binding Title}"
             BackgroundColor="#FF36516B">

    <Grid Padding="30" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Entry: Binds to the 'Title' property in the ViewModel -->
        <Border Grid.Row="0" StrokeShape="RoundRectangle 12" StrokeThickness="1" Stroke="#FF060404" Padding="10,5" Margin="0,10,0,0">
            <Entry Placeholder="Enter note title..."
                   Text="{Binding Title}"
                   FontSize="20"
                   FontAttributes="Bold" />
        </Border>

        <!-- Note Editor: Binds to the 'Text' property in the ViewModel -->
        <Border Grid.Row="1" StrokeShape="RoundRectangle 12" StrokeThickness="1" Stroke="Black" Padding="10">
            <Editor Placeholder="Start writing your note..."
                    Text="{Binding Text}"
                    FontSize="16"
                    AutoSize="TextChanges" />
        </Border>

        <!-- Action Buttons with Command Bindings -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Grid.Column="0" Text="Cancel" Command="{Binding CancelCommand}" BackgroundColor="#FF16212A" TextColor="White" />
            <Button Grid.Column="1" Text="Save" Command="{Binding SaveNoteCommand}" BackgroundColor="#28A745" TextColor="White" />
        </Grid>
    </Grid>
</ContentPage>
